<?xml version="1.0" encoding="UTF-8" ?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boardns">

	<!-- 글작성 -->
	<insert id="insert" parameterType="board">
		insert into board values(board_seq.nextval, #{writer}, #{subject}, #{content}, 0, sysdate)	
	</insert>
	
	<!-- 글목록 -->
	<select id="list" resultType="board">
		select * from board order by no desc	
	</select>
	
	<!-- 조회수 증가 -->
	<update id="hit" parameterType="int">
		update board set readcount = readcount + 1 where no = #{no}
	</update>	
	
	<!-- 상세정보구하기 -->
	<select id="content" parameterType="int" resultType="board">
		select * from board where no = #{no}
	</select>
	
	<!-- 정보 수정 -->
	<update id="update" parameterType="board">
		update board set writer=#{writer}, subject=#{subject}, content=#{content}, 
		register = sysdate where no = #{no}
	</update>
	
	<!-- 삭제 -->
	<delete id="delete" parameterType="int">
		delete from board where no = #{no}
	</delete>
	
</mapper>